<div id="noticeAlertModal">
    <div ng-controller="commonCtrl" ng-init="loadNoticeAlertWindow()">
        <div id="__noticeCookieName" class="hide uk-hidden">{{data.common.noticeCookieName}}</div>
        <div id="noticeAlertWindow" class="uk-modal" aria-labelledby="noticeTitle" aria-hidden="true" role="dialog">
            <div class="uk-modal-dialog uk-modal-dialog-large uk-clearfix" style="padding-top: 70px;">
                <div id="noticeBG" style="width: 100%; height: 50px; background-color: {{data.common.notice.color}}; margin-bottom: 5px;position:absolute;top: 0;left: 0; padding: 7px 25px;">
                    <h4 id="noticeTitle" style="font-size: 24px; margin-top: 7px; font-weight: 300;color: {{data.common.notice.fontColor}};">{{data.common.notice.name}}</h4>
                </div>
                <div>
                    <p id="noticeText" style="color: #000;">{{formatDate data.common.notice.activeDate (concat data.common.shortDateFormat data.common.timeFormat true true)}} - Important: {{data.common.notice.message}}</p>
                    <button class="md-btn md-btn-flat-success md-btn-wave-light right" type="button" style="margin-bottom: 0;" ng-click="confirmNoticeClick();">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>